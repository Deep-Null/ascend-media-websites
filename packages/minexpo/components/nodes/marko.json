    "@modifiers": "array",
    "@attrs": "object",
    "@link-attrs": "object"
  },
  "<shared-content-list-node>": {
    "template": "./content-list.marko",
    "@node": "object",
    "@display-image": {
      "type": "boolean",
      "default-value": true
    },
    "@with-teaser": {
      "type": "boolean",
      "default-value": false
    },
    "@attrs": "object",
    "@link-attrs": "object"
