$ const { site } = out.global;
$ const href = site.get('twitterFeed.href');
$ const tagline = site.get('twitterFeed.tagline');

<if(href)>
  <a
    class="twitter-timeline btn btn-primary btn-block"
    data-height="650"
    data-theme="light"
    href=href
    target="_blank"
  >
    ${tagline}
  </a>
  <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
</if>
