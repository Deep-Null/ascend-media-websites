import hierarchyAliases from "@parameter1/base-cms-marko-web/utils/hierarchy-aliases";

$ const { GAM } = out.global;

$ const {
  id,
  alias,
  name,
  pageNode,
} = input;

<marko-web-website-section-page-layout id=id alias=alias name=name>
  <@head>
    <marko-web-gtm-website-section-context|{ context }| alias=alias>
      <marko-web-gtm-push data=context />
    </marko-web-gtm-website-section-context>
  </@head>

  <@page>
    <a class="anchor" name="top" />
    <marko-web-resolve-page|{ data: section }| node=pageNode>
      $ const aliases = hierarchyAliases(section);
      <!--<shared-leaderboard-block />-->
      <marko-web-gam-define-display-ad
        ...GAM.getAdUnit({ name: "lb1", aliases })
        modifiers=["top-of-page", "max-width-970", "center", "paid"]
        collapse-before-ad-fetch=true
        with-wrapper=true
      />

      <div class="row">
        <div class="col-lg-8 mb-block-lg">
          <marko-web-node-list collapsible=false class="mb-block">
            <@body>
              <div class="mb-2 font-weight-bold">
                View Sessions For
              </div>
              <div class="row">
                <div class="col-md-7">
                  <div class="d-flex">
                    <a href="#monday" class="btn btn-primary">Monday</a>
                    <a href="#tuesday" class="btn btn-primary ml-2">Tuesday</a>
                    <a href="#wednesday" class="btn btn-primary ml-2">Wednesday</a>
                    <a href="#thursday" class="btn btn-primary ml-2">Thursday</a>
                  </div>
                </div>

                <div class="col-md-5 mt-3 mt-md-0 text-left text-md-right">
                  <a href="https://www.abstractsonline.com/pp8/#!/9150" target="_blank" class="btn btn-primary">Online Program Planner</a>
                </div>
              </div>
            </@body>
          </marko-web-node-list>

          <a class="anchor" name="monday" />
          <shared-event-schedule-block class="mb-block-lg">
            <@header>Monday</@header>
            <@query-params
              limit=0
              beginning-after=(new Date(1595808000000))
              ending-before=(new Date(1595894399999))
              ending-after=null
            />
            <@footer><a href="#top">Return to Top</a></@footer>
          </shared-event-schedule-block>

          <a class="anchor" name="tuesday" />
          <shared-event-schedule-block class="mb-block-lg">
            <@header>Tuesday</@header>
            <@query-params
              limit=0
              beginning-after=(new Date(1595894400000))
              ending-before=(new Date(1595980799999))
              ending-after=null
            />
            <@footer><a href="#top">Return to Top</a></@footer>
          </shared-event-schedule-block>

          <a class="anchor" name="wednesday" />
          <shared-event-schedule-block class="mb-block-lg">
            <@header>Wednesday</@header>
            <@query-params
              limit=0
              beginning-after=(new Date(1595980800000))
              ending-before=(new Date(1596067199999))
              ending-after=null
            />
            <@footer><a href="#top">Return to Top</a></@footer>
          </shared-event-schedule-block>

          <a class="anchor" name="thursday" />
          <shared-event-schedule-block class="mb-block-lg">
            <@header>Thursday</@header>
            <@query-params
              limit=0
              beginning-after=(new Date(1596067200000))
              ending-before=(new Date(1596153599999))
              ending-after=null
            />
            <@footer><a href="#top">Return to Top</a></@footer>
          </shared-event-schedule-block>
        </div>

        <div class="col-lg-4 mb-block-lg page-rail">
          <shared-global-right-rail-block aliases=aliases />
        </div>
      </div>
    </marko-web-resolve-page>
  </@page>
</marko-web-website-section-page-layout>
